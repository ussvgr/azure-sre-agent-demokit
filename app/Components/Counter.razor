@page "/"

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;

        // Bug: カウンターが10に達するとサーバーサイドでExceptionが発生
        if (currentCount == 10)
        {
            throw new InvalidOperationException("カウンターが上限に達しました！サーバーエラーが発生しました。");
        }
    }
}
